new-session -s '#h'
set -g aggressive-resize on
set -g base-index 1
set -g default-terminal tmux-256color
set -g detach-on-destroy off
set -g history-limit 100000
set -g mouse on
set -g renumber-windows on
set -g set-clipboard on
set -g window-size latest

set -ga terminal-features '*:hyperlinks,RGB'
set -ga terminal-overrides ',*256col*:Tc'
set -g allow-passthrough on

source ~/dotfiles/tmux/keys.conf

set -g @plugin 'laktak/extrakto'
set -g @plugin 'sainnhe/tmux-fzf'
# set -g @plugin 'tmux-plugins/tmux-continuum'
set -g @plugin 'tmux-plugins/tmux-resurrect'
set -g @plugin 'tmux-plugins/tmux-yank'

# Theme
# set -g @plugin "janoamaral/tokyo-night-tmux"
set -g @plugin 'catppuccin/tmux'
# set -g @plugin 'tmux-plugins/tpm'

# set -g @continuum-restore 'on'
set -g @yank_selection_mouse 'clipboard'

# # ---- Status bar (Catppuccin) ----
set -g status on
set -g status-position top
set -g status-interval 5

set -g @catppuccin_flavor 'mocha'

# Modules (info-dense)
# set -g @catppuccin_window_status "icon"
set -g @catppuccin_git_enabled "yes"

# Dense styling
set -g status-justify "absolute-centre"
set -wg automatic-rename off
run ~/.tmux/plugins/tmux/catppuccin.tmux
# set -g @catppuccin_window_status_style "slanted"
## Window global/default configuration
# set -g @catppuccin_window_default_text " #I#{?#{!=:#{window_name},Window},: #W,} "
# set -g @catppuccin_window_status "icon"
# set -g @catppuccin_window_default_fill "number"
# set -g @catppuccin_window_number_position "right"
# set -g window-status-format " #I#{?#{!=:#{window_name},Window},: #W,} "
# Make status text bold
set -g status-style "bold"
set -g window-status-current-style "bold"

set -g @catppuccin_window_text ""
set -g @catppuccin_window_current_text ""

set -g window-status-format "#{?#{!=:#{window_name},Window},: #W,} #I "
set -g window-status-style "bg=#{@thm_bg},fg=#{@thm_rosewater}"
set -g window-status-last-style "bg=#{@thm_bg},fg=#{@thm_peach}"
set -g window-status-activity-style "bg=#{@thm_red},fg=#{@thm_bg}"
set -g window-status-bell-style "bg=#{@thm_red},fg=#{@thm_bg},bold"

set -g @catppuccin_window_left_separator ""
set -g @catppuccin_window_middle_separator ""
set -g @catppuccin_window_right_separator ""
set -gF window-status-separator "#[bg=#{@thm_bg},fg=#{@thm_overlay_0}]│"

set -g window-status-current-format " #I#{?#{!=:#{window_name},Window},: #W,} "
set -g window-status-current-style "bg=#{@thm_peach},fg=#{@thm_bg},bold"
 
# set -g status-left " #H "
# set -g status-right '#[fg=#{@thm_crust},bg=#{@thm_teal}] session: #S '

set -g status-right-length 100
set -g status-left-length 100
set -g status-left "#{E:@catppuccin_status_host}"
set -ga status-left "#[bg=#{@thm_bg},fg=#{@thm_blue}]  #{=/-32/...:#{s|$USER|~|:#{b:pane_current_path}}} "
set -g status-right "#{E:@catppuccin_status_application}"
set -agF status-right "#{E:@catppuccin_status_cpu}"
set -ag status-right "#{E:@catppuccin_status_session}"
set -agF status-right "#{E:@catppuccin_status_gitmux}"
set -g @catppuccin_pane_border_status "yes" # set to "yes" to enable

# set -g status-style "bg=terminal"

# set -ag status-right "#{E:@catppuccin_status_uptime}"
# set -agF status-right "#{E:@catppuccin_status_battery}"
# set -g @catppuccin_status_separator ""
# set -g @catppuccin_window_left_separator ""
# set -g @catppuccin_window_right_separator ""
set -g @plugin 'tmux-plugins/tmux-cpu'


run-shell ~/dotfiles/tmux/tpm/tpm
